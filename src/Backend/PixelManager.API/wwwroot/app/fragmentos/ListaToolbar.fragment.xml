<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

	<HBox
        justifyContent="SpaceBetween"
        alignItems="Center"
        class="sapUiSmallMarginBottom">

		<HBox>
			<Button
                icon="sap-icon://add"
                text="{i18n>addImageButtonText}"
                type="Emphasized"
                press=".onAddImagePress" />
		</HBox>

		<HBox alignItems="End">
			<VBox class="sapUiTinyMarginEnd">
				<Label
                    text="{i18n>fileTypeLabel}"
                    labelFor="tipoArquivoFilter" />
				<MultiComboBox
                    id="tipoArquivoFilter"
                    selectedKeys="{filtro>/TiposDoArquivo}"
                    items="{tipos>/}"
                    width="200px"
                    selectionFinish=".aoFiltrar">
					<core:Item
                        key="{tipos>key}"
                        text="{tipos>text}" />
				</MultiComboBox>
			</VBox>

			<VBox class="sapUiTinyMarginEnd">
				<Label
                    text="{i18n>imageCreationDateColumn}"
                    labelFor="dataCriacaoFilter" />
				<DateRangeSelection
                    id="dataCriacaoFilter"
                    dateValue="{filtro>/dataDeCriacaoInicial}"
                    secondDateValue="{filtro>/dataDeCriacaoFinal}"
                    change=".aoFiltrar"
                    displayFormat="dd/MM/yyyy"
                    placeholder="{i18n>dateRangePlaceholder}"
                    width="250px" />
			</VBox>

			<SearchField
				placeholder="{i18n>searchPlaceholder}"
				value="{filtro>/nomeDoArquivo}"
				width="300px"
				search=".aoFiltrar" />
		</HBox>
	</HBox>
</core:FragmentDefinition>