<c:FragmentDefinition
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core">

    <VBox class="sapUiMediumMargin">
        <VBox>
            <Title
                text="{i18n>imageRegistrationTitle}"
                level="H2"
                class="sapUiSmallMarginBottom" />
            <Text
                text="{i18n>imageRegistrationDescription}"
                class="sapThemeText-asColor" />
        </VBox>

        <f:GridList
            id="gridList"
            class="sapUiResponsiveMargin sapUiContentPadding sapUiLargeMarginTop"
            width="72rem">
            <f:headerToolbar>
                <Toolbar>
                    <Title
                        text="{i18n>basicInformationTitle}"
                        level="H6" />
                </Toolbar>
            </f:headerToolbar>
            <f:GridListItem>
                <VBox class="sapUiContentPadding sapUiLargeMargin">
                    <VBox class="sapUiSmallMarginBottom">
                        <Label
                            design="Bold"
                            text="{i18n>imageNameLabel}"
                            required="true" />
                        <Input
                            id="inputNomeDoArquivo"
                            value="{imagens>/nomeDoArquivo}"
                            width="100%"
                            placeholder="Ex: imagem.jpg"
                            maxLength="100" />
                    </VBox>
                    <VBox class="sapUiSmallMarginBottom">
                        <Label
                            design="Bold"
                            text="{i18n>imageTypeLabel}"
                            required="true" />
                        <Select
                            id="selectTipoDoArquivo"
                            selectedKey="{imagens>/tipo}"
                            width="100%"
                            enabled="{tela>/habilitarCampos}">
                            <core:Item key="0" text="PNG" />
                            <core:Item key="1" text="JPG" />
                            <core:Item key="2" text="Bitmap" />
                            <core:Item key="3" text="GIF" />
                        </Select>
                    </VBox>
                </VBox>
            </f:GridListItem>
            <f:GridListItem>
                <VBox class="sapUiContentPadding sapUiLargeMargin">
                    <VBox class="sapUiSmallMarginBottom">
                        <Label
                            design="Bold"
                            text="{i18n>heightLabel}"
                            required="true" />
                        <Input
                            id="inputAltura"
                            value="{imagens>/altura}"
                            width="100%"
                            placeholder="{i18n>heightPlaceholder}"
                            type="Number"
                            enabled="{tela>/habilitarCampos}" />
                    </VBox>
                    <VBox class="sapUiSmallMarginBottom">
                        <Label
                            design="Bold"
                            text="{i18n>lengthLabel}"
                            required="true" />
                        <Input
                            id="inputComprimento"
                            value="{imagens>/comprimento}"
                            width="100%"
                            placeholder="{i18n>lengthPlaceholder}"
                            type="Number"
                            enabled="{tela>/habilitarCampos}" />
                    </VBox>
                </VBox>
            </f:GridListItem>
        </f:GridList>
    </VBox>

</c:FragmentDefinition>