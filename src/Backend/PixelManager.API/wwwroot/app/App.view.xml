<mvc:View
    controllerName="pixelmanager.app.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <Shell id="shell">
        <App id="app">
            <Page id="mainPage" showHeader="true">
                <customHeader>
                    <OverflowToolbar>
                        <Title text="{i18n>appTitle}" level="H1" />
                    </OverflowToolbar>
                </customHeader>
                <content>
                    <NavContainer id="navContainer" />
                </content>
            </Page>
        </App>
    </Shell>
</mvc:View>